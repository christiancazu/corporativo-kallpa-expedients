{
  "name": "@expedients/api",
  "version": "0.0.2",
  "description": "expedients api",
  "author": "Christian Carrillo christiancazu@gmail.com",
  "private": true,
  "license": "ISC",
  "scripts": {
    "build": "rm -rf dist && nest build",
    "start:dev": "NODE_ENV=development rm -rf dist && nest start api --watch",
    "start:prod": "NODE_ENV=production node dist/apps/expedients/main",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./apps/expedients/src/config/typeorm.ts",
    "migration:generate": "npx typeorm-ts-node-commonjs -d ./apps/expedients/src/config/typeorm.ts migration:generate ./apps/expedients/src/migrations/$name",
    "migration:create": "npx typeorm-ts-node-commonjs migration:create ./apps/expedients/src/migrations/$name",
    "migration:revert": "npx typeorm-ts-node-commonjs -d ./apps/expedients/src/config/typeorm.ts migration:revert",
    "lint": "pnpm biome lint ."
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.675.0",
    "@aws-sdk/s3-request-presigner": "^3.675.0",
    "@expedients/shared": "workspace:*",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/bullmq": "^10.2.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.4.7",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/typeorm": "^10.0.2",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.31.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "handlebars.adapter": "link:@nestjs-modules/mailer/dist/adapters/handlebars.adapter",
    "mime": "^4.0.4",
    "multer": "1.4.5-lts.1",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/mime": "^4.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@types/web-push": "^3.6.4",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "keywords": [
      "pnpm",
      "monorepo",
      "microservices",
      "typescript",
      "nest.js",
      "aws",
      "s3"
    ],
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}